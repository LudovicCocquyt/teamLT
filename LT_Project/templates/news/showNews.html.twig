{% extends 'base.html.twig' %}

{% block body %}
	<div class="aqua-gradient pb-5" style="padding-top: 100px; height: auto;">
    	<div class="container" style="width: 70%;">
        	
            <!--Grid column-->
	    		<div style="max-width: 50% !important;" class="offset-3">
	            	<img src="https://mdbootstrap.com/img/Photos/Others/images/77.jpg" class="img-fluid" alt="Sample post image">
	        	</div>

    		{% if news.isActive == true %}
    			<!--Excerpt-->
                <div class="col-lg-12 news-data">
                    <p><strong>
                    <i class="offset-3 fa fa-clock-o"></i>{{ news.createdAt ? news.createdAt|date('d-m-Y') : '' }} par {{ news.createdBy }}</strong></p>
                </div>
            
            	<h3 class="col-lg-12"><a style="color: #374348;" href="{{ path('showNews_show', {'id': news.id}) }}"><strong>{{ news.title }}</strong></a></h3>
    		
    			<div class="col-lg-12">
        			<p>{{ news.description }}</p>
           		</div>
        	{% endif %}
            <!--Grid column-->
		</div>
	</div>
</div>
{% endblock %}