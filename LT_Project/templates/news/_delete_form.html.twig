<form class="delete-ml" method="post" action="{{ path('news_delete', {'id': news.id}) }}" onsubmit="return confirm('Êtes vous sûrs ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ news.id) }}">
    
    <button class="delete-btn">
    	<i class="fas fa-trash-alt red-text"></i>
    </button>
</form>
