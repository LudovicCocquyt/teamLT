<form method="post" action="{{ path('news_delete', {'id': news.id}) }}" onsubmit="return confirm('Etes vous sur ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ news.id) }}">
    <button style="border: solid 2px red; margin-top: 10px;"><i class="fas fa-trash-alt red-text"></button>
</form>
