<div id="news" class="blue-gradient pb-5" style="width: 100%; height: auto; padding-top: 3em; 
    margin-top: -3em; ">
	
    <!--Main layout-->
    <main>
        <div class="container">

        <!--Section: Magazine v.1-->
        <section class="wow fadeIn">

            <!--Grid row-->
            <div class="text-left">

                <!--Grid column-->
                <div class="row my-5 offset-lg-1 col-lg-10 col-md-12">
	            	{% for news in news|reverse |slice(0, 1) %}
	            		{% if news.isActive == true %}
                		<div class="col-lg-6">
	                        <!--Image-->
	                        <div class="view overlay rounded z-depth-1-half mb-3">
	                            <img src="../../image/{{ imageNews }}" class="img-fluid" alt="Responsive image">
	                            <a>
	                                <div class="mask rgba-white-slight"></div>
	                            </a>
	                        </div>

	                        
		            	</div>
	                	{% endif %}
	            	{% endfor %}

	                <!--/Featured news-->
	            	<div  id="smallNews"class="col-lg-6">
	                {% for news in news|reverse |slice(1, 3) %}
	                	{% if news.isActive == true %}
						<!--Small news-->
		            	<div class="row pb-4 m-1" style="border-bottom: solid 1px;">
							<!--Excerpt-->
		                    <div class="col-md-9">
		                        <p class="dark-grey-text">
		                            <strong> {{ news.createdAt ? news.createdAt|date('d-m-Y') : '' }} par {{ news.createdBy }}</strong>
		                        </p>
		                        <p>{{ news.title|slice(0, 25) }}
		                            <a style="color: #374348;" href="{{ path('showNews_show', {'id': news.id}) }}"><i class="fa fa-angle-right float-right fa-2x"></i></a>
		                        </p>
		                    </div>
		            	</div>
	                	<!--/Small news-->
	                	{% endif %}
	                {% endfor %}
            		</div>

            		{% for news in news|reverse |slice(0, 1) %}
	            		{% if news.isActive == true %}
	            			<!--Excerpt-->
	                        <div class="col-lg-12 news-data">
	                            <p><strong>
	                            <i class="fa fa-clock-o"></i>{{ news.createdAt ? news.createdAt|date('d-m-Y') : '' }} par {{ news.createdBy }}</strong></p>
	                        </div>
	                        <h3 class="col-lg-12"><a style="color: #374348;" href="{{ path('showNews_show', {'id': news.id}) }}"><strong>{{ news.title }}</strong></a></h3>
                		<div class="col-lg-12 mb-4">
            				<p>{{ news.description }}</p>
		            	</div>
	                	{% endif %}
	            	{% endfor %}

      		      	<div id="miniNews" class="mb-5 col-6 d-none offset-3">
        				{% for news in news|reverse |slice(1, 3) %}		
    					<p>
    						<strong> {{ news.createdAt ? news.createdAt|date('d-m-Y') : '' }} par {{ news.createdBy }} - </strong>{{ news.title|slice(0, 45) }}
	        				<a style="color: #374348;" href="{{ path('showNews_show', {'id': news.id}) }}"><i class="fa fa-angle-right float-right fa-2x"></i></a>
	    				</p>
        				{% endfor %}
					</div>

                </div>
                <!--Grid column-->
            </div>
            <!--Grid row-->
        </section>
        <!--/Section: Magazine v.1-->
    	</div>
	</main>
	    <!--Main layout-->
</div>

<style type="text/css">

	@media screen and (max-width : 991px) {

  		#smallNews {
  			display: none !important;
  		}

  		#miniNews {
  			display: block !important;
  		}
	}
</style>