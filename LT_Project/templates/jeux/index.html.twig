{% extends 'admin/baseAdmin.html.twig' %}

{% block body %}
    <div class="row m-0 space-between">
        <h1 class="m-3">Jeux</h1>
        <a class="m-3 color-icon" href="{{ path('jeux_new') }}"><i class="fas fa-plus"></i><i class="far fa-image fa-2x"></i>
        </a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr class="text-center">
                <th>Créé</th>
                <th>Modifié</th>
                <th>Actif</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for jeux in jeuxes|reverse %}
            <tr class="text-center">
                <td>
                    {{ jeux.createdAt ? jeux.createdAt|date('d-m-Y') : '' }}
                    <BR> {{ jeux.createdAt ? jeux.createdAt|date('H:i:s') : '' }}
                    <BR> {{ jeux.createdBy }}
                </td>
                <td>
                    {{ jeux.updatedAt ? jeux.updatedAt|date('d-m-Y') : '' }} 
                    <BR> {{ jeux.updatedAt ? jeux.updatedAt|date('H:i:s') : '' }}
                    <BR> {{ jeux.updatedBy }}
                </td>
                <td>{{ jeux.isActive ? '<i class="fas fa-check text-success fa-2x"></i>' : '<i class="fas fa-times text-danger fa-2x"></i>' }}
                </td>
                <td>{{ jeux.name }}</td>
                <td class="d-flex justify-content-center">
                    <a href="{{ path('jeux_show', {'id': jeux.id}) }}"><i class="far fa-eye m-3"></i></a>
                    <a href="{{ path('jeux_edit', {'id': jeux.id}) }}"><i class="fas fa-edit m-3"></i></a>
                   <p>{{ include('jeux/_delete_form.html.twig') }}</p>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
