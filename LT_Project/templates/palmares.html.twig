<div id="palmares"style="padding-top: 6em; 
    margin-top: -6em; width: 100%; height: 800px; background-color: #FFF;">
	<section class="row  m-0">
		<div class="col-6">
		    
		    <h1 class="text-primary" style="font-family: 'Kaushan Script', cursive; font-size: 90px;">Palmares</h1>
		    
		    <section class="row">
			    <div class="text-center col-6">
		            {% for palmares in palmares|slice(10,19)|reverse %}
		                <p class="mb-0">{{ palmares.jeux.name }}</p>
		                <p class="mb-1">{{ palmares.name }} - Top {{ palmares.rank }}</p>
		            {% endfor %}
		        </div>
		        <div class="text-center col-6">
		            {% for palmares in palmares|slice(0,9)|reverse %}
		                <p class="mb-0 font-weight-bold">{{ palmares.jeux.name }}</p>
		                <p class="mb-1">{{ palmares.name }} - Top {{ palmares.rank }}</p>
		            {% endfor %}
		        </div>
		    </section>

		</div>


		<div class="col-6">

			<h1 class="text-danger text-right mr-4" style="font-family: 'Kaushan Script', cursive; font-size: 90px;">Matchs</h1>
			<section class="row m-0">
				<div class="text-center col-6">
		            {% for resultat in resultats|slice(20,29)|reverse %}
		                <div class="row" style="justify-content: center;">
                		{% if  resultat.scoreOne < resultat.scoreTwo %}
		                	<p class="mb-0 col-4">{{ resultat.lineup.name }}</p>
		                	<p class="mb-0 col-4">
		                	<span class="text-danger">{{ resultat.scoreOne }}</span> - <span class="text-success">{{ resultat.scoreTwo }}</p>
		                	<p class="mb-0 col-4">{{ resultat.teamAdverse }}</p>
		                {% else %}
		                	<p class="mb-0 col-4">{{ resultat.lineup.name }}</p>
		                	<p class="mb-0 col-4">
		                	<span class="text-success">{{ resultat.scoreOne }}</span> - <span class="text-danger">{{ resultat.scoreTwo }}</p>
		                	<p class="mb-0 col-4">{{ resultat.teamAdverse }}</p>
		                {% endif %}
		                </div>
		            {% endfor %}
		        </div>
		        <div class="text-center col-6">
		            {% for resultat in resultats|slice(0,19)|reverse %}
		                <div class="row" style="justify-content: center;">
                		{% if  resultat.scoreOne < resultat.scoreTwo %}
		                	<p class="mb-0 col-4">{{ resultat.lineup.name }}</p>
		                	<p class="mb-0 col-4">
		                	<span class="text-danger">{{ resultat.scoreOne }}</span> - <span class="text-success">{{ resultat.scoreTwo }}</p>
		                	<p class="mb-0 col-4">{{ resultat.teamAdverse }}</p>
		                {% else %}
		                	<p class="mb-0 col-4">{{ resultat.lineup.name }}</p>
		                	<p class="mb-0 col-4">
		                	<span class="text-success">{{ resultat.scoreOne }}</span> - <span class="text-danger">{{ resultat.scoreTwo }}</p>
		                	<p class="mb-0 col-4">{{ resultat.teamAdverse }}</p>
		                {% endif %}
		                </div>
		            {% endfor %}
		        </div>
		    </section>

		</div>
	</section>
</div>
