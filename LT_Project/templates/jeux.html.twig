{% for jeux in jeux %}
  {% if jeux.isActive == true %}

  <div id="lineup" style="width: 100%; height: 580px;">

  <!-- Main navigation -->
  <header>
    <!-- Full Page Intro -->
    <div class="view" style="background-image: url('img/fond.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center center; margin-top: -50px;">
      <!-- Mask & flexbox options-->
      <div class="mask rgba-gradient d-flex justify-content-center align-items-center">
        <!-- Content -->
        <div class="container">
          <!--Grid row-->
          <div class="row">
            <!--Grid column-->
            <div class="col-md-6 mb-5 mt-md-0 mt-5 white-text text-center text-md-left">
              <h1 class="h1-responsive font-weight-bold wow fadeInLeft" data-wow-delay="0.3s">{{ jeux.name }} </h1>
              <hr class="hr-light wow fadeInLeft" data-wow-delay="0.3s">
              <h6 class="mb-3 wow fadeInLeft" data-wow-delay="0.3s">{{ jeux.description }}</h6>
              <a class="btn btn-outline-white btn-rounded wow fadeInLeft d-none" data-wow-delay="0.3s">Learn more</a>
            </div>
            <!--Grid column-->

              <div class="col-md-6 col-xl-6">
              <!-- Card Wider -->
              <div class="card card-cascade wider bg-transparent">

                <!-- Card image -->
                <div class="view view-cascade overlay">
                  <img class="card-img-top" src="img/{{ jeux.image }}" alt="Card image cap">
                    <div class="mask rgba-white-slight"></div>
                  </a>
                </div>

                <!-- Card content -->
                <div class="card-body card-body-cascade text-center pb-5">

                  <!-- Title -->
                  <h4 class="white-text card-title"><strong>Nos line up</strong></h4>
                  <!-- Text -->
                  {% for lineup in jeux.lineups %}
                    <a class="ml-1 mr-1" href="{{ path('lineups_show', {'id': lineup.id}) }}">{{ lineup.name }}</a>
                  {% endfor %}
                    
                </div>

              </div>
              <!-- Card Wider -->
              </div>

          </div>
          <!--Grid row-->
        </div>
        <!-- Content -->
      </div>
      <!-- Mask & flexbox options-->
    </div>
    <!-- Full Page Intro -->
  </header>
  <!-- Main navigation -->
  </div>
  {% endif %}
{% endfor %}

<style>

  html,
  body,
  header,
  .view {
    height: 100%;
  }

  @media (max-width: 740px) {
    html,
    body,
    header,
    .view {
      height: 1000px;
    }
  }
  @media (min-width: 800px) and (max-width: 850px) {
    html,
    body,
    header,
    .view {
      height: 650px;
    }
  }
  
  .rgba-gradient {
    background: linear-gradient(45deg, rgba(0, 0, 0, 0.7), rgba(72, 15, 144, 0.4) 100%);
  }

  .card {
    background-color: rgba(126, 123, 215, 0.2);
  }

  .md-form label {
    color: #ffffff;
  }

  h6 {
    line-height: 1.7;
  }

</style>