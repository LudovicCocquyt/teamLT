{% extends 'admin/baseAdmin.html.twig' %}

{% block body %}
    <div class="row m-3" style="justify-content: space-between;">
        <h1>{{ lineup.name }}</h1>
        <div>
            <a style="color: #63c7d2;" href="{{ path('lineup_edit', {'id': lineup.id}) }}"><i class="fas fa-users-cog fa-2x"></i></a>
            <a class="m-3" style="color: #63c7d2;" href="{{ path('lineup_index') }}"><i class="fas fa-sign-out-alt  fa-2x"></i></a>
        </div>
    </div>

    <table class="table  table-striped">
        <tbody>
            <tr>
                <th>Créé</th>
                <td>{{ lineup.createdAt ? lineup.createdAt|date('d-m-Y H:i:s') : '' }} par {{ lineup.createdBy }}</td>
            </tr>
            <tr>
                <th>Modifié</th>
                <td>{{ lineup.updatedAt ? lineup.updatedAt|date('d-m-Y H:i:s') : '' }} par {{ lineup.updatedBy }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ lineup.isActive ? '<i class="fas fa-check text-success fa-2x"></i>' : '<i class="fas fa-times text-danger fa-2x"></i>' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ lineup.name }}</td>
            </tr>
            <tr>
                <th>Tag</th>
                <td>{{ lineup.tag }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>image</td>
            </tr>
            <tr>
                <th>Jeux</th>
                <td>
                    {% for game in lineup.jeux%}
                        {{ game.name }}<br>
                    {% endfor%}
                </td>
            </tr>
            <tr>
                <th>Joueurs</th>
                <td>
                    {% for player in lineup.users%}
                        {{ player.username }}<br>
                    {% endfor%}
                </td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ lineup.description }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
