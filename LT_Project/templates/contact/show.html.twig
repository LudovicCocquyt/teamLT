{% extends 'admin/baseAdmin.html.twig' %}

{% block body %}
    <div class="row m-3" style="justify-content: space-between;">
        <h1>{{ contact.object }}</h1>
        <div>
            <a class="m-3" style="color: #63c7d2;" href="{{ path('contact_index') }}"><i class="fas fa-sign-out-alt  fa-2x"></i></a>
        </div>
    </div>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ contact.createdAt ? contact.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Objet</th>
                <td>{{ contact.object }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ contact.description }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{{ contact.isActive ? '<i class="fas fa-check text-success fa-2x"></i>' : '<i class="fas fa-times text-danger fa-2x"></i>' }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
