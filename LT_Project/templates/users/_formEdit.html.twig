 {{ form_start(form) }}
    {{ form_errors(form) }}
    <table class="table table-striped">
    	<tbody>
	    	<tr class="text-center">
		  		<th>{{ form_widget(form.email, { 'attr': {'class': "span12",'placeholder': "Email*"} }) }}</th>
		  	</tr>
		  	<tr class="text-center">
		  		<th>{{ form_widget(form.firstname, { 'attr': {'class': "span12",'placeholder': "Nom"} }) }}</th>
		  	</tr>
		  	<tr class="text-center">
		  		<th>{{ form_widget(form.lastname, { 'attr': {'class': "span12",'placeholder': "Prénom"} }) }}</th>
		  	</tr>
		  	<tr class="text-center">
		  		<th>{{ form_widget(form.username, { 'attr': {'class': "span12",'placeholder': "Pseudo*"} }) }}</th>
		  	</tr>
		  	<tr class="text-center">
		  		<th>{{ form_widget(form.birthday, { 'attr': {'class': "span12",'placeholder': "Date de naissance"} }) }}</th>
		  	</tr>
		  	<tr class="text-center">
		  		<th>{{ form_widget(form.nationality, { 'attr': {'class': "span12",'placeholder': "nationalité"} }) }}</th>
		  	</tr>
		  	<tr class="text-center">
		  		<th>{{ form_widget(form.description, { 'attr': {'class': "span12",'placeholder': "description"} }) }}</th>
		  	</tr>
		</tbody>
	</table>
	<div class="text-center">
		<button class="text-center btn mb-5" style="background-color: #63c7d2;">{{ button_label|default('Valider') }}</button>
    </div>
{{ form_end(form) }}